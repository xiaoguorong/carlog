.box{
  width:100vw;
  height:100vh;
  background:#F6F7F8;
}
.change-avatar{
  padding-left:28rpx;
  background:#fff;
  overflow:hidden;
}
.change-avatar text:nth-of-type(1){
  font-size:32rpx;
  color:rgba(53,53,53,1);
  line-height:148rpx;
  float:left;
}
.change-avatar image:nth-of-type(2){
  width:84rpx;
  height:84rpx;
  float:right;
  border-radius: 50%;
  margin-top:32rpx;
}
.change-avatar image:nth-of-type(1){
  width:44rpx;
  height:44rpx;
  float:right;
  margin-top:52rpx;
  margin-left:12rpx;
  margin-right:14rpx;
}
.name{
  margin-top:1px;
}
.name text:nth-of-type(1),
.campus text:nth-of-type(1),
.auth-name text:nth-of-type(1){
  line-height:108rpx;
}
.change-avatar text:nth-of-type(2){
  color:rgba(53,53,53,1);
  float:right;
  line-height:108rpx;
  font-size:28rpx;
  margin-right:28rpx;
}
.campus{
  margin-top:28rpx;
}
.campus text:nth-of-type(2),
.auth-name text:nth-of-type(2){
  color:#CECECE;
}