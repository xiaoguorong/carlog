.title{
  margin-top:32rpx;
  margin-left:28rpx;
  font-size:44rpx;
  font-weight:bold;
  color:rgba(53,53,53,1);
  line-height:60rpx;
}
.warn{
  margin-left:28rpx;
  margin-top:16rpx;
  font-size:24rpx;
  color:rgba(53,53,53,1);
  line-height:34rpx;
}
.password{
  margin-top:48rpx;
  margin-left:28rpx;
  margin-right:28rpx;
  padding-bottom:32rpx;
  display:flex;
  border-bottom:1px solid #F6F7F8;
}
.password input{
  font-size:32rpx;
  height:44rpx;
  line-height:44rpx;
  flex:1;
}
.password image{
  width:36rpx;
  height:36rpx;
  margin-top:4rpx;
  margin-left:20rpx;
}
.btn{
  margin:auto;
  width:600rpx;
  margin-top:112rpx;
}
.mobile image{
  width:28rpx;
  height:28rpx;
  margin-top:8rpx;
}
.code{
  display:flex;
  margin-left:28rpx;
  margin-right:28rpx;
  padding-bottom:32rpx;
  border-bottom:1px solid #F6F7F8;
}
.code text:nth-of-type(1){
  font-size:32rpx;
  color:rgba(77,87,100,1);
  line-height:44rpx;
  margin-top:32rpx;
  margin-right:32rpx;
}
.code input{
  flex:1;
  margin-top:32rpx;
  height:44rpx;
  font-size:32rpx;
  color:#353535;
  line-height:44rpx;
}
.code text:nth-of-type(2){
  font-size:28rpx;
  color:#6B92F2;
  line-height:44rpx;
  margin-top:32rpx;
  margin-left:32rpx;
}