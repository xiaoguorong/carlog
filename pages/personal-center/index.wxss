.info{
  padding:40rpx 28rpx 40rpx 44rpx;
  display:flex;
  background:#fff;
  position: relative;
}
.avatar{
  width:120rpx;
  height:120rpx;
}
.avatar image{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
}
.detail{
  margin-left:38rpx;
  margin-top:6rpx;
  flex:1;
}
.detail>view{
  text-align:left;
}
.detail .name{
  overflow:hidden;
  height:50rpx;
  display:flex;
  align-items: center 
}
.detail .name>text{
  font-size:36rpx;
  color:rgba(53,53,53,1);
  line-height:50rpx;
  margin-right:12rpx;
}
.edit text{
  font-size:28rpx;
  line-height:40rpx;
  float:left;                  
  color:rgba(151,151,151,1);
}
.no-login view:nth-of-type(1){
  font-size:44rpx;
  font-weight:500;
  margin-left:38rpx;
  margin-top:6rpx;
  color:rgba(53,53,53,1);
  line-height:60rpx;
}
.no-login view:nth-of-type(2){
  font-size:32rpx;
  margin-left:38rpx;
  margin-top:6rpx;
  color:rgba(53,53,53,1);
  line-height:38rpx;
}
.btn-wx{
  width:100%;
  height:100%;
  position: absolute;
  left:0;
  top:0;
  opacity: 0;
}
.data{
  border-top:1px solid #F6F7F8;
  display:flex;
  padding:0 30rpx;
  justify-content: space-around;
}
.data view text{
  text-align:center;
}
.data view text:nth-of-type(1){
  font-size:30rpx;
}
.data view text:nth-of-type(1){
  font-size:26rpx;
}